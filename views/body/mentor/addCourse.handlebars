<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="card">
      <div class="card-header" data-background-color="blue">
        <h4 class="title">Book</h4>
        {{#if add}}
          <p class="category"> Submit a Book</p>
        {{else}}
          <p class="category"> Edit Book</p>
        {{/if}}
      </div>
      <div class="card-content">
        {{#if add}}
          <form action="/course/add" method="post">
        {{else}}
          <form action="/course/edit/{{course._id}}?_method=PUT" method="post">
            <input type="hidden" name="_method" value="PUT">
        {{/if}}
        <div class="row">
          <div class="col-md-6">
            <div class="form-group label-floating">
              <label class="control-label">Title</label>
              <input type="text" class="form-control" name="title" value="{{course.title}}">
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group label-floating">
              <label class="control-label">Price</label>
              <input type="number" class="form-control" name="price" value= {{course.price}}>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group label-floating">
              <label class="control-label">Image</label>
              <input type="text" class="form-control" name="img" value="{{course.img}}">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group label-floating">
              <label class="control-label">Description/Video</label>
              <input type="text" class="form-control" name="video" value="{{course.video}}">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group label-floating">
              <label class="control-label">Give a detailed description of the Book..</label>
              <textarea name="introduction" class="form-control" rows="8" style="width: 100%;">{{course.introduction}}</textarea>
            </div>
          </div>
        </div>
        <button type="submit" class="btn btn-danger pull-right">Submit</button>
        <div class="clearfix"></div>
        </form>
      </div>
    </div>
  </div>
</div>